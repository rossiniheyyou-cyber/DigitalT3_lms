# DB provider selection
# - mysql (default): uses DB_HOST/DB_PORT/DB_USERNAME/DB_PASSWORD/DEFAULT_DB
# - aws_rds_postgres (alias: postgres): uses PG_HOST/PG_PORT/PG_USERNAME/PG_PASSWORD/PG_DATABASE
# - disabled: start API without DB connectivity
DB_PROVIDER=mysql

# -----------------------
# MySQL (current default)
# -----------------------
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=changeme
DEFAULT_DB=lms

# TLS/SSL (AWS RDS friendly)
# Set DB_SSL=false to disable TLS.
# Optionally provide an RDS CA bundle path (default: ./global-bundle.pem at repo root when running backend).
DB_SSL=true
DB_SSL_CA_PATH=

# -----------------------------
# AWS RDS Postgres (optional)
# -----------------------------
PG_HOST=localhost
PG_PORT=5432
PG_USERNAME=postgres
PG_PASSWORD=changeme
PG_DATABASE=lms

# TLS/SSL for Postgres (AWS RDS friendly)
# Uses DB_SSL/DB_SSL_ENABLED and DB_SSL_CA_PATH as well.
# Controls tls option rejectUnauthorized (defaults to false to match existing RDS guidance in this repo).
DB_SSL_REJECT_UNAUTHORIZED=false

# Auth
JWT_SECRET=please-set-a-long-random-secret

# CORS
ALLOWED_ORIGINS=*
